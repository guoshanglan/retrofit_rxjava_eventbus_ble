<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f6f6f6"
    android:paddingBottom="@dimen/x30"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_head_back"
        android:id="@+id/title_head"/>

    <cc.hisens.hardboiled.patient.wideview.LoadingPointView
        android:id="@+id/id_loading_point_view"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/x100"
        android:layout_centerHorizontal="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/ly_introduce"
            android:layout_marginBottom="@dimen/x30"
            android:background="@color/white"
            android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x15">

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x25"
                android:ellipsize="end"
                android:maxLength="12"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/x21"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctor_zhiwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_name"
                android:layout_marginTop="@dimen/x27"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/x16" />

            <TextView
                android:id="@+id/doctor_workplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_zhiwei"
                android:layout_marginTop="@dimen/x5"
                android:ellipsize="end"
                android:maxLength="17"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/x16" />

            <cc.hisens.hardboiled.patient.wideview.CircleImageView
                android:id="@+id/doctor_head_image"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginTop="@dimen/x23"
                android:src="@drawable/doctor_head_120" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:layout_marginTop="@dimen/x30"
            android:background="#f6f6f6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x25"
                android:ellipsize="end"
                android:maxLength="12"
                android:text="执业点"
                android:layout_marginLeft="@dimen/x15"
                android:textColor="@color/black"
                android:textSize="@dimen/x21"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ly_zhiye"
                android:layout_marginLeft="@dimen/x15"
                android:orientation="vertical">



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:layout_marginTop="@dimen/x21"
                android:background="#f6f6f6" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x25"
                    android:ellipsize="end"
                    android:maxLength="12"
                    android:text="擅长方向"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x21"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:id="@+id/tv_doctor_goodAt"
                    android:textSize="@dimen/x17"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginTop="@dimen/x21"
                    android:text=""/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:layout_marginTop="@dimen/x21"
                android:background="#f6f6f6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x25"
                    android:ellipsize="end"
                    android:maxLength="12"
                    android:text="个人履历"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x21"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="@dimen/x17"
                    android:layout_marginRight="@dimen/x15"
                    android:id="@+id/tv_doctor_intro"
                    android:layout_marginTop="@dimen/x21"
                    android:layout_marginBottom="@dimen/x25"
                    android:text=""/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>