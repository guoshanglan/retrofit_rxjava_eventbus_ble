<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cc.hisens.hardboiled.patient.wideview.CircleImageView
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:id="@+id/iv_avator"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginTop="@dimen/x15"/>

    <TextView
        android:id="@+id/tv_doctor_message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x55"
        android:layout_marginTop="@dimen/x15"
        android:visibility="gone"
        android:background="@drawable/red_dot"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_username"
        android:textColor="#000000"
        android:layout_toRightOf="@id/iv_avator"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginLeft="@dimen/x15"
       android:textSize="@dimen/x17" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        android:layout_alignParentRight="true"
        android:textColor="#b4b9c3"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x25"
        android:layout_marginLeft="@dimen/x15"
        android:textSize="@dimen/x12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_desc"
        android:textColor="#999999"
        android:layout_below="@id/tv_username"
        android:layout_toRightOf="@id/iv_avator"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x11"
        android:layout_marginLeft="@dimen/x15"
        android:textSize="@dimen/x13" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_desc"
        android:layout_marginTop="@dimen/x15"
        android:background="#e5e5e5"></View>

</RelativeLayout>