<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x20"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_time_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x20"
        android:text="15:00"
        android:textColor="#999999"
        android:textSize="@dimen/x15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x15">


        <cc.hisens.hardboiled.patient.wideview.CircleImageView
            android:id="@+id/iv_doctor_head"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/doctor_head_100" />

        <TextView
            android:id="@+id/chat_item_content_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/talk_bg_white"
            android:maxWidth="@dimen/x250"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x5"
            android:text="医生你好"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>


</LinearLayout>