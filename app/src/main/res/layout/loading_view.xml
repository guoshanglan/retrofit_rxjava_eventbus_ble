<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ly_loading"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x140"
        android:id="@+id/ly_dot"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/x12"
            android:id="@+id/tv_dot1"
            android:background="@drawable/wait_dot"/>
        <TextView
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/x12"
            android:id="@+id/tv_dot2"
            android:layout_marginLeft="@dimen/x5"
            android:background="@drawable/wait_dot2"/>


    </LinearLayout>




</LinearLayout>