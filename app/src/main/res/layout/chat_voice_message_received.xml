<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/x15"
    android:layout_marginTop="@dimen/x20"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_time_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="15:00"
        android:layout_marginBottom="@dimen/x20"
        android:textColor="#999999"
        android:textSize="@dimen/x15" />

    <LinearLayout
        android:layout_width="@dimen/x250"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x15"
        android:orientation="horizontal">

        <cc.hisens.hardboiled.patient.wideview.CircleImageView
            android:id="@+id/iv_doctor_head"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@drawable/doctor_head_100" />

        <LinearLayout
            android:layout_width="@dimen/x130"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:background="@drawable/talk_bg_white"
            android:id="@+id/ly_received_voice"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_voice_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x10"

                android:src="@drawable/audio_animation_left_list" />


            <TextView
                android:id="@+id/chat_item_vocie_time_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x10"
                android:text="60s"
                android:textColor="@color/black"
                android:textSize="17dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_voice_red_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/talk_icon_red" />

    </LinearLayout>

</LinearLayout>