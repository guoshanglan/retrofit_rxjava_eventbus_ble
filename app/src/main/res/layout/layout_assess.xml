<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/x24"
    android:layout_marginRight="@dimen/x24"
    app:cardBackgroundColor="@color/hisens_blue"
    app:cardCornerRadius="20dp"
    app:contentPadding="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_assess_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x56"
                android:background="@color/hisens_blue"
                android:gravity="center_vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="@dimen/x10"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x14" />

            <RadioGroup
                android:id="@+id/rgrp_assess"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbtn_assess_option0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/sl_assess_button"
                    android:drawablePadding="@dimen/x18"
                    android:paddingBottom="@dimen/x10"
                    android:paddingLeft="@dimen/x26"
                    android:paddingTop="@dimen/x10"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x14"
                    android:visibility="gone"/>

                <RadioButton
                    android:id="@+id/rbtn_assess_option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/sl_assess_button"
                    android:drawablePadding="@dimen/x18"
                    android:paddingBottom="@dimen/x10"
                    android:paddingLeft="@dimen/x26"
                    android:paddingTop="@dimen/x10"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x14"
                    android:visibility="gone"/>

                <RadioButton
                    android:id="@+id/rbtn_assess_option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/sl_assess_button"
                    android:drawablePadding="@dimen/x18"
                    android:paddingBottom="@dimen/x10"
                    android:paddingLeft="@dimen/x26"
                    android:paddingTop="@dimen/x10"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x14"
                    android:visibility="gone"/>

                <RadioButton
                    android:id="@+id/rbtn_assess_option3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/sl_assess_button"
                    android:drawablePadding="@dimen/x18"
                    android:paddingBottom="@dimen/x10"
                    android:paddingLeft="@dimen/x26"
                    android:paddingTop="@dimen/x10"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x14"
                    android:visibility="gone"/>

                <RadioButton
                    android:id="@+id/rbtn_assess_option4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/sl_assess_button"
                    android:drawablePadding="@dimen/x18"
                    android:paddingBottom="@dimen/x10"
                    android:paddingLeft="@dimen/x26"
                    android:paddingTop="@dimen/x10"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x14"
                    android:visibility="gone"/>

                <RadioButton
                    android:id="@+id/rbtn_assess_option5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/sl_assess_button"
                    android:drawablePadding="@dimen/x18"
                    android:paddingBottom="@dimen/x10"
                    android:paddingLeft="@dimen/x26"
                    android:paddingTop="@dimen/x10"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x14"
                    android:visibility="gone"/>

            </RadioGroup>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
