<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/title_head_back"
        android:id="@+id/ly_tilte"/>

    <cc.hisens.hardboiled.patient.wideview.LoadingPointView
        android:id="@+id/id_loading_point_view"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/x100"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_tilte"
        android:id="@+id/ly_doctor_detail"
        android:visibility="gone"
        android:orientation="vertical">

    <ListView
        android:id="@+id/listview_doctor_pingjia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>



    <TextView
        android:id="@+id/tv_toConsultion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/hisens_blue"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/x17" />

    </LinearLayout>

</RelativeLayout>